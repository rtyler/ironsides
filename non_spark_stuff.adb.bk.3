with Ada.Calendar;
package body Non_Spark_Stuff is

   -------------
   -- Time_Of --
   -------------

   function Time_Of
     (Year, Month, Day, Hour, Minute, Second : Natural)
      return Unsigned_Types.Unsigned32
   is
   begin
      return Unsigned_Types.Unsigned32(
         Ada.Calendar.Time_Of(
            Year => Year,
            Month => Month,
            Day => Day,
            Seconds => Second+Minute*60+Hour*3600));
   end Time_Of;

end Non_Spark_Stuff;
